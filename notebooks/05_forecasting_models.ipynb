   "source": [
    "# 05 â€” Forecasting Models"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import sys\n",
    "sys.path.insert(0, '../')\n",
    "\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "from src.baselines import run_all_baselines, plot_baseline_results\n",
    "from src.forecasters import LSTMForecaster, ClusterInformedForecaster\n",
    "from src.evaluation import calculate_metrics, plot_forecast_vs_actual\n",
    "from src.config import FORECAST_HORIZONS\n",
    "\n",
    "# Set up plotting style\n",
    "import seaborn as sns\n",
    "sns.set_style('whitegrid')\n",
    "plt.rcParams['figure.figsize'] = (14, 6)"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 1. Load Data"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load stock data\n",
    "stock_data = pd.read_parquet('../data/raw/stock_data.parquet')\n",
    "\n",
    "# Load cluster labels from clustering notebook\n",
    "cluster_labels = pd.read_parquet('../data/raw/cluster_labels.parquet')\n",
    "\n",
    "# Load feature matrices\n",
    "feature_matrix = pd.read_parquet('../data/raw/feature_matrix.parquet')\n",
    "pca_data = pd.read_parquet('../data/raw/pca_data.parquet')\n",
    "\n",
    "print(f\"Stock data shape: {stock_data.shape}\")\n",
    "print(f\"Cluster labels shape: {cluster_labels.shape}\")\n",
    "print(f\"Feature matrix shape: {feature_matrix.shape}\")\n",
    "print(f\"\\nStock data index (tickers): {stock_data.index.unique()[:10].tolist()}...\")\n",
    "print(f\"\\nCluster labels:\")\n",
    "print(cluster_labels.head())"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 2. Select Stocks for Forecasting Demo"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Select representative stocks from each cluster\n",
    "# We'll pick the largest/most liquid stock from each cluster for the demo\n",
    "\n",
    "# Create a mapping of tickers to clusters\n",
    "ticker_cluster_map = dict(zip(cluster_labels['ticker'], cluster_labels['kmeans_cluster']))\n",
    "\n",
    "# Select representative stocks (one from each cluster)\n",
    "demo_tickers = []\n",
    "for cluster_id in sorted(cluster_labels['kmeans_cluster'].unique()):\n",
    "    cluster_stocks = cluster_labels[cluster_labels['kmeans_cluster'] == cluster_id]['ticker'].tolist()\n",
    "    # Select the first stock from each cluster (could be sorted by market cap for better selection)\n",
    "    demo_tickers.append(cluster_stocks[0])\n",
    "\n",
    "print(f\"Demo tickers selected: {demo_tickers}\")\n",
    "print(f\"\\nDemo ticker clusters:\")\n",
    "for ticker in demo_tickers:\n",
    "    cluster = ticker_cluster_map[ticker]\n",
    "    print(f\"  {ticker}: Cluster {cluster}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 3. Baseline Models"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Select one demo stock for baseline comparison\n",
    "demo_stock = demo_tickers[0]\n",
    "print(f\"Running baseline models for {demo_stock}...\")\n",
    "\n",
    "# Extract data for demo stock\n",
    "stock_ts = stock_data[stock_data.index == demo_stock].copy()\n",
    "stock_ts = stock_ts.sort_index()\n",
    "\n",
    "print(f\"\\n{demo_stock} data shape: {stock_ts.shape}\")\n",
    "print(f\"Date range: {stock_ts.index.min()} to {stock_ts.index.max()}\")\n",
    "\n",
    "# Run all baseline models\n",
    "baseline_results = run_all_baselines(stock_ts['close'].values)\n",
    "\n",
    "print(f\"\\nBaseline Models Results:\")\n",
    "for model_name, predictions in baseline_results.items():\n",
    "    print(f\"  {model_name}: predictions shape {predictions.shape}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "### 3.1 Visualize Baseline Forecasts"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Get actual vs predicted for visualization\n",
    "actual_prices = stock_ts['close'].values\n",
    "\n",
    "# Plot baseline forecasts\n",
    "fig, axes = plt.subplots(2, 2, figsize=(15, 10))\n",
    "axes = axes.flatten()\n",
    "\n",
    "for idx, (model_name, predictions) in enumerate(baseline_results.items()):\n",
    "    if idx < 4:\n",
    "        ax = axes[idx]\n",
    "        \n",
    "        # Align predictions with actual (baseline models may have different length)\n",
    "        n_pred = len(predictions)\n",
    "        actual_subset = actual_prices[-n_pred:]\n",
    "        \n",
    "        ax.plot(actual_subset, 'b-', label='Actual', linewidth=2)\n",
    "        ax.plot(predictions, 'r--', label='Predicted', linewidth=2, alpha=0.7)\n",
    "        ax.set_title(f'{model_name} - {demo_stock}')\n",
    "        ax.set_xlabel('Time')\n",
    "        ax.set_ylabel('Price')\n",
    "        ax.legend()\n",
    "        ax.grid(True, alpha=0.3)\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.savefig('../results/baseline_forecasts.png', dpi=300, bbox_inches='tight')\n",
    "plt.show()\n",
    "\n",
    "print(f\"Baseline forecast visualization saved.\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 4. LSTM Forecaster"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Initialize and train LSTM forecaster\n",
    "lstm_forecaster = LSTMForecaster(lookback=20, epochs=50, batch_size=32, verbose=0)\n",
    "\n",
    "# Prepare data for LSTM (split into train/test)\n",
    "prices = stock_ts['close'].values\n",
    "split_idx = int(len(prices) * 0.8)\n",
    "\n",
    "train_prices = prices[:split_idx]\n",
    "test_prices = prices[split_idx:]\n",
    "\n",
    "print(f\"Training LSTM on {demo_stock}...\")\n",
    "print(f\"Train set size: {len(train_prices)}, Test set size: {len(test_prices)}\")\n",
    "\n",
    "# Train LSTM\n",
    "lstm_forecaster.fit(train_prices)\n",
    "print(f\"LSTM training completed.\")\n",
    "\n",
    "# Make predictions on test set\n",
    "lstm_predictions = lstm_forecaster.predict(test_prices)\n",
    "print(f\"LSTM predictions shape: {lstm_predictions.shape}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "### 4.1 LSTM Results"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualize LSTM predictions\n",
    "fig, ax = plt.subplots(figsize=(14, 6))\n",
    "\n",
    "# Plot actual vs LSTM predictions\n",
    "ax.plot(test_prices, 'b-', label='Actual', linewidth=2)\n",
    "ax.plot(lstm_predictions, 'g--', label='LSTM Predicted', linewidth=2, alpha=0.7)\n",
    "\n",
    "ax.set_title(f'LSTM Forecasting Results - {demo_stock}')\n",
    "ax.set_xlabel('Days')\n",
    "ax.set_ylabel('Price')\n",
    "ax.legend(fontsize=12)\n",
    "ax.grid(True, alpha=0.3)\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.savefig('../results/lstm_forecasts.png', dpi=300, bbox_inches='tight')\n",
    "plt.show()\n",
    "\n",
    "# Calculate metrics\n",
    "from sklearn.metrics import mean_squared_error, mean_absolute_error\n",
    "mse = mean_squared_error(test_prices, lstm_predictions)\n",
    "mae = mean_absolute_error(test_prices, lstm_predictions)\n",
    "rmse = np.sqrt(mse)\n",
    "\n",
    "print(f\"\\nLSTM Performance Metrics:\")\n",
    "print(f\"  MSE: {mse:.4f}\")\n",
    "print(f\"  RMSE: {rmse:.4f}\")\n",
    "print(f\"  MAE: {mae:.4f}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 5. Cluster-Informed Forecasting"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Initialize cluster-informed forecaster\n",
    "cluster_forecaster = ClusterInformedForecaster()\n",
    "\n",
    "print(\"Training cluster-informed forecaster...\")\n",
    "# Fit on all stock data with cluster labels\n",
    "cluster_forecaster.fit(stock_data, cluster_labels)\n",
    "\n",
    "print(\"Cluster-informed forecaster training completed.\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "### 5.1 Cluster Model Results"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Make predictions using cluster-informed model\n",
    "cluster_informed_preds = cluster_forecaster.predict(demo_tickers)\n",
    "\n",
    "print(f\"\\nCluster-informed predictions for demo tickers:\")\n",
    "for ticker, pred in cluster_informed_preds.items():\n",
    "    print(f\"  {ticker}: {pred}\")\n",
    "\n",
    "# Compare with individual LSTM predictions\n",
    "fig, axes = plt.subplots(1, 2, figsize=(16, 6))\n",
    "\n",
    "# LSTM predictions\n",
    "ax = axes[0]\n",
    "ax.plot(test_prices, 'b-', label='Actual', linewidth=2)\n",
    "ax.plot(lstm_predictions, 'g--', label='LSTM', linewidth=2, alpha=0.7)\n",
    "ax.set_title(f'LSTM Model - {demo_stock}')\n",
    "ax.set_ylabel('Price')\n",
    "ax.legend()\n",
    "ax.grid(True, alpha=0.3)\n",
    "\n",
    "# Cluster-informed predictions\n",
    "ax = axes[1]\n",
    "cluster_pred = cluster_informed_preds.get(demo_stock, lstm_predictions)\n",
    "ax.plot(test_prices, 'b-', label='Actual', linewidth=2)\n",
    "ax.plot(cluster_pred[:len(test_prices)], 'm--', label='Cluster-Informed', linewidth=2, alpha=0.7)\n",
    "ax.set_title(f'Cluster-Informed Model - {demo_stock}')\n",
    "ax.set_ylabel('Price')\n",
    "ax.legend()\n",
    "ax.grid(True, alpha=0.3)\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.savefig('../results/model_comparison.png', dpi=300, bbox_inches='tight')\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 6. Multi-Horizon Forecasting"
   ]
  },
  {
   "cell_type": "code">
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Run all models across different forecast horizons\n",
    "print(f\"Forecast horizons: {FORECAST_HORIZONS}\")\n",
    "\n",
    "# Dictionary to store results for all horizons\n",
    "multi_horizon_results = {}\n",
    "\n",
    "for horizon in FORECAST_HORIZONS:\n",
    "    print(f\"\\nProcessing {horizon} horizon forecasts...\")\n",
    "    horizon_results = {}\n",
    "    \n",
    "    for ticker in demo_tickers:\n",
    "        # Get stock data\n",
    "        stock_ts = stock_data[stock_data.index == ticker].copy()\n",
    "        \n",
    "        # Prepare for multi-step ahead forecasting\n",
    "        prices = stock_ts['close'].values\n",
    "        split_idx = int(len(prices) * 0.8)\n",
    "        \n",
    "        test_data = prices[split_idx:]\n",
    "        \n",
    "        # Run forecasting for this horizon\n",
    "        # This is a placeholder - adapt based on actual horizon definition\n",
    "        if horizon == '1d':\n",
    "            steps_ahead = 1\n",
    "        elif horizon == '1w':\n",
    "            steps_ahead = 5\n",
    "        else:  # '1m'\n",
    "            steps_ahead = 21\n",
    "        \n",
    "        # Store results\n",
    "        horizon_results[ticker] = {\n",
    "            'actual': test_data[-steps_ahead:],\n",
    "            'lstm': lstm_predictions[-steps_ahead:] if len(lstm_predictions) >= steps_ahead else lstm_predictions,\n",
    "            'cluster_informed': cluster_informed_preds.get(ticker, lstm_predictions)[-steps_ahead:]\n",
    "        }\n",
    "    \n",
    "    multi_horizon_results[horizon] = horizon_results\n",
    "\n",
    "print(f\"\\nMulti-horizon forecasting completed.\")\n",
    "print(f\"Results available for horizons: {list(multi_horizon_results.keys())}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## 7. Save Forecasting Results"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create comprehensive results dataframe\n",
    "results_summary = []\n",
    "\n",
    "for horizon, horizon_results in multi_horizon_results.items():\n",
    "    for ticker, predictions in horizon_results.items():\n",
    "        results_summary.append({\n",
    "            'ticker': ticker,\n",
    "            'horizon': horizon,\n",
    "            'actual': predictions['actual'],\n",
    "            'lstm_pred': predictions['lstm'],\n",
    "            'cluster_informed_pred': predictions['cluster_informed']\n",
    "        })\n",
    "\n",
    "# Save results\n",
    "results_df = pd.DataFrame(results_summary)\n",
    "results_df.to_parquet('../data/raw/forecasting_results.parquet', index=False)\n",
    "\n",
    "# Save LSTM model (if supported by the model class)\n",
    "# lstm_forecaster.save('../models/lstm_model.h5')\n",
    "\n",
    "print(f\"Forecasting results saved to data/raw/forecasting_results.parquet\")\n",
    "print(f\"Results shape: {results_df.shape}\")\n",
    "print(f\"\\nResults summary:\")\n",
    "print(results_df.head())"
   ]
  }
